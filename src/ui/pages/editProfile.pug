include ../elements/meta
include ../elements/scripts
include ../elements/navigation

doctype html
html(lang='ru')
    head
        +meta
    body
        +navigation

        form.container(action='editProfile?token=' + user.token, method='POST')
            .row.justify-content-center
                .col-10.text-center
                    input.form-control(
                        name='description'
                        type='text'
                        placeholder='О вас'
                        value=user.description
                    ).mb-2
                    input.form-control(
                        name='job'
                        type='text'
                        placeholder='Рабочая сфера'
                        value=user.job
                    ).mb-2
                    input.form-control(
                        name='family'
                        type='text'
                        placeholder='Семейное положение'
                        value=user.family
                    ).mb-2
                    input.form-control(
                        name='interesting'
                        type='text'
                        placeholder='Интересы'
                        value=user.interesting
                    ).mb-2
                    button.btn.btn-primary.mt-3.mr-3(type='submit') Сохранить
                    a.btn.btn-primary.mt-3(href='profile?token=' + user.token) Отменить

        +scripts